@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-lg-12 col-xlg-4">
        <h5 class="box-title">Public methods</h5>
        @using (Html.BeginForm("AddCourse", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <select multiple id="public-methods" name="Tags">
                <option value="elem_1">elem 1</option>
                <option value="elem_2">elem 2</option>
                <option value="elem_3">elem 3</option>
                <option value="elem_4">elem 4</option>
                <option value="elem_5">elem 5</option>
                <option value="elem_6">elem 6</option>
                <option value="elem_7">elem 7</option>
                <option value="elem_8">elem 8</option>
                <option value="elem_9">elem 9</option>
                <option value="elem_10">elem 10</option>
            </select>
            <br />
            <div class="form-group text-right">
                <button type="submit" class="btn btn-info"> <i class="fa fa-check"></i> Buat</button>
            </div>
        }
    </div>
</div>


@section styles{
    <link href="~/assets/plugins/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/multiselect/css/multi-select.css" rel="stylesheet" type="text/css" />
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/assets/plugins/select2/dist/js/select2.full.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/bootstrap-select/bootstrap-select.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/assets/plugins/multiselect/js/jquery.multi-select.js"></script>
    <script>
        jQuery(document).ready(function () {
            // For multiselect
            $('#public-methods').multiSelect();

        });
    </script>

}
